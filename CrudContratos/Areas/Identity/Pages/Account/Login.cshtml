@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Crowe</title>
    <link rel="stylesheet" href="~/css/auth/login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <div class="logo">
                <h1>Crowe</h1>
                <p>NewTimePro</p>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.Email">Correo electrónico</label>
                    <input asp-for="Input.Email" class="form-control" value="admin@admin.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="*****" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                @* <div class="login-options">
                    <div class="remember-me">
                        <input asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe">Remember me?</label>
                    </div>
                    <a class="forgot-password" asp-page="./ForgotPassword">¿Olvidó su contraseña?</a>
                </div> *@

                <button type="submit" class="btn-login">Iniciar sesión</button>

                <div class="separator">O inicia sesión con</div>

                <button type="button" class="btn-microsoft">
                    <i class="fab fa-microsoft"></i> Microsoft
                </button>

            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>